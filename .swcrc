{
    "$schema": "https://json.schemastore.org/swcrc",
    "sourceMaps": true,
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "keepClassNames": true,
        "baseUrl": "./dist",
        "paths": {
            "@configs/*": ["./configs/*"],
            "@base/*": ["./base/*"],
            "@validators/*": ["./validators/*"],
            "@modules/*": ["./modules/*"],
            "@exceptions/*": ["./exceptions/*"],
            "@decorators/*": ["./decorators/*"],
            "@enums/*": ["./enums/*"],
            "@constants/*": ["./constants/*"],
            "@entities/*": ["./entities/*"],
            "@guard/*": ["./guard/*"],
            "@utils/*": ["./utils/*"],
            "@libs/*": ["./libs/*"],
            "@src/*": ["./*"]
        }
    },
    "root": "src",
    "minify": false
}
